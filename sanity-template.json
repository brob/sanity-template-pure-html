{
    "version": 2,
    "title": "A Pure HTML starter for Sanity.io",
    "description": "This site uses a very small build script to create 1 pure-html page from Sanity data",
    "previewMedia": {
      "type": "image",
      "src": "assets/netlify.png",
      "alt": "Netlify"
    },
    "technologies": [
      {
        "id": "netlify",
        "name": "Netlify",
        "url": "https://www.netlify.com/"
      },
      {
          "id": "html",
          "name": "HTML",
          "url": "https://html.spec.whatwg.org/"
      },
      {
          "id": "handlebars",
          "name": "Handlebars",
          "url": "https://handlebarsjs.com/"
      }
    ],
    "deployment": {
      "provider": "netlify",
      "sites": [
        {
          "id": "studio",
          "type": "studio",
          "title": "Sanity Studio",
          "description": "The Sanity Studio is where you edit and structure your content.",
          "dir": "./studio",
          "previewMedia": {
            "type": "image",
            "src": "assets/studio.jpg",
            "alt": "A preview image of the Sanity Studio."
          },
          "buildSettings": {
            "base": "studio",
            "dir": "dist",
            "cmd": "npm run build && cp netlify.toml dist"
          },
          "requirements": ["build-hook"]
        },
        {
          "id": "web",
          "type": "web",
          "title": "HTML Webpage",
          "requirements": ["build-hook"],
          "description": "Handlebars generated html web page",
          "dir": "./web",
          "buildSettings": {
            "base": "site",
            "dir": "dist",
            "cmd": "npm run build"
          },
          "previewMedia": {
            "type": "image",
            "src": "assets/frontend.png",
            "alt": "A preview image of the webpage."
          }
        }
      ]
    }
  }